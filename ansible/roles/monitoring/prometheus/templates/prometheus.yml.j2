global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
        - targets:
            - 'localhost:9093'

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporters'
    static_configs:
      - targets:
          - 'localhost:9100'
          - '192.168.30.11:9100'  # Exemple d'autre VM

  - job_name: 'grafana'
    static_configs:
      - targets: ['localhost:3000']
